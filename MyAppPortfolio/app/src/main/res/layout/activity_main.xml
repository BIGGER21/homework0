<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bigger.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="POPULAR MOVIES"
        android:textSize="12dp"
        android:onClick="btn1"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:text="STOCK HAWK"
        android:textSize="12dp"
        android:onClick="btn2"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:text="BUILD IT BIGGER"
        android:textSize="12dp"
        android:onClick="btn3"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:text="MAKE YOUR APP MATERIAL"
        android:textSize="12dp"
        android:onClick="btn4"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:text="GO UBIQUITOUS"
        android:textSize="12dp"
        android:onClick="btn5"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:text="CAPSTONE"
        android:textSize="12dp"
        android:onClick="btn6"
        android:textColor="#ffffff"
        android:background="#53596e"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
